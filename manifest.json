{
  "manifest_version": 3,
  "name": "Jongo Pass",
  "version": "1.0",
  "description": "Secure your logins with email verification",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "myicon.png",
      "48": "myicon.png",
      "128": "myicon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}